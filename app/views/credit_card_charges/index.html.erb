<div class="container">
  <h1>Failed Charges</h1>
  <div class="table-responsive">
    <table class="table table-failed" id="failed_charges">
      <thead>
        <tr>
          <th>Customer</th>
          <th>Amount</th>
          <th>Failed Date</th>
          <!-- <th colspan="3"></th> -->
        </tr>
      </thead>

      <tbody>
        <% @failed.each do |credit_card_charge| %>
          <tr>
            <td><%= credit_card_charge.customer.first_name + ' ' + credit_card_charge.customer.last_name %></td>
            <td>$&nbsp;<%= credit_card_charge.amount.to_i / 100 %>.<%= credit_card_charge.amount.to_i % 100 %></td>
            <td><%= credit_card_charge.created_at.strftime("%b %d,%Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>

