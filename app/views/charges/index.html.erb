<h1>Failed Charges</h1>
<ul id="failed-charges">
  <% @failed_charges.each do |charge| %>
    <li>
      <span><%= charge.customer.full_name %></span>
      <span>|</span>
      <span><%= charge.amount %></span>
      <span>|</span>
      <span><%= charge.failed_at %></span>
    </li>
  <% end %>
</ul>

