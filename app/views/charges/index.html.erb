<p id="notice"><%= notice %></p>

<div class="failed_charges">
  <h1>Failed Charges</h1>
  <table>
    <thead>
      <tr>
        <th>Customer</th>
        <th>Amount</th>
        <th>Failed Date</th>
      </tr>
    </thead>

    <tbody>
      <% @failed.each do |charge| %>
        <tr class="failed_charge_row">
          <td><%= charge.customer.full_name %></td>
          <td><%= charge.format_amount %></td>
          <td><%= l charge.failed_date, format: :full %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div>

