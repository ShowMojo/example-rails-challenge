  <% @disputed_charges.each do |charge| %>
    <li>
      <span><%= charge.customer.full_name %></span>
      <span>|</span>
      <span><%= charge.amount %></span>
      <span>|</span>
      <span><%= charge.disputed_at %></span>
    </li>
  <% end %>
</ul>

<h1>Successful Charges</h1>
<ul id="successful-charges">
