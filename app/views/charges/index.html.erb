<p id="notice"><%= notice %></p>

<h1>Failed Charges</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Charge amount</th>
      <th>Date when the charge was disputed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @failed_charges.each do |charge| %>
      <tr class='failed_charges'>
        <td><%= charge.full_name %></td>
        <td><%= number_to_currency charge.amount %></td>
        <td><%= charge.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Charge', new_charge_path %>
