<table class="table <%= css_classes %>">
  <thead>
  <tr class="header">
    <th>Customer</th>
    <th>Paid</th>
    <th>Amount</th>
    <th>Currency</th>
    <th>Refunded</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% charges.each do |charge| %>
    <tr class="customer">
      <td><%= charge.customer.full_name %></td>
      <td><%= charge.paid %></td>
      <td><%= charge.amount %></td>
      <td><%= charge.currency %></td>
      <td><%= charge.refunded %></td>
      <td><%= link_to 'Show', charge %></td>
      <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
      <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>