<p id="notice"><%= notice %></p>

<h1>Failed Charges</h1>


<table class="failed">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% failed_charges.each do |charge| %>
      <tr>
        <td><%= charge.customer.full_name %></td>
        <td><%= number_to_currency(charge.display_amount, unit: charge.display_currency) %></td>
        <td><%= charge.created_at.strftime("%d-%m-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Disputed Charges</h1>


<table class="disputed">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% disputed_charges.each do |charge| %>
      <tr>
        <td><%= charge.customer.full_name %></td>
        <td><%= number_to_currency(charge.display_amount, unit: charge.display_currency) %></td>
        <td><%= charge.created_at.strftime("%d-%m-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Successfull Charges</h1>


<table class="success">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Paid</th>
      <th>Refunded</th>
    </tr>
  </thead>

  <tbody>
    <% successful_charges.each do |charge| %>
      <tr>
        <td><%= charge.customer.full_name %></td>
        <td><%= number_to_currency(charge.display_amount, unit: charge.display_currency) %></td>
        <td><%= charge.paid %></td>
        <td><%= charge.refunded %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
