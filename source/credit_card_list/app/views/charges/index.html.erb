<p id="notice"><%= notice %></p>

<h1>Charges</h1>

<section id="failed">
  <h2>Failed Charges</h2>
  <div>
    <table>
      <thead>
        <tr>
          <th>Amount</th>
          <th>Date</th>
        </tr>
      </thead>

      <tbody>
        <% @failed_charges.each do |charge| %>
          <tr>
            <td><%= charge.amount %></td>
            <td><%= charge.created_at.strftime("%B %d, %Y") %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>

