<p id="notice"><%= notice %></p>

<h1>Failed Charges</h1>
<table class="failed">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Failure Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_card_charges.failed.each do |credit_card_charge| %>
      <tr>
        <td><%= credit_card_charge.customer.full_name %></td>
        <td><%= credit_card_charge.amount_in_human_readable %></td>
        <td><%= credit_card_charge.created.to_date %></td>
        <td><%= link_to 'Show', credit_card_charge %></td>
        <td><%= link_to 'Edit', edit_credit_card_charge_path(credit_card_charge) %></td>
        <td><%= link_to 'Destroy', credit_card_charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr/>

