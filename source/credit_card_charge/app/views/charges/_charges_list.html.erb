<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Amount</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% charges.each do |charge| %>
      <tr>
        <td><%= charge.customer_name %></td>
        <td><%= charge.human_amount %></td>
        <td><%= charge.created %></td>
      </tr>
    <% end %>
  </tbody>
</table>
