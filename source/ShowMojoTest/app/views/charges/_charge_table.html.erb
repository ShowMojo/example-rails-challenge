<table class="table-<%= bk_class %>">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% charges.each do |charge| %>
      <tr class="<%= bk_class %>">
        <td><%= CustomerDecorator.new(charge.customer).name %></td>
        <td><%= charge.updated_at %></td>
        <td><%= charge.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
