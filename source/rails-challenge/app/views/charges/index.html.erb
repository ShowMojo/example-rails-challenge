<p id="notice"><%= notice %></p>

<h1>Failed Charges</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Charge Amount</th>
    <th>Date Of Failure</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody class="failed">
  <% @failed_charges.each do |charge| %>
      <%= render partial: 'charge', locals: {charge: charge} %>
  <% end %>
  </tbody>
</table>

<h1>Disputed Charges</h1>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Charge Amount</th>
    <th>Date Of Dispute</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody class="disputed" >
  <% @disputed_charges.each do |charge| %>
      <%= render partial: 'charge', locals: {charge: charge} %>
  <% end %>
  </tbody>
</table>

<h1>Successful Charges</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Charge Amount</th>
    <th>Date Of Success</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody class="successful">
  <% @successful_charges.each do |charge| %>
      <%= render partial: 'charge', locals: {charge: charge} %>
  <% end %>
  </tbody>
</table>

<br>

