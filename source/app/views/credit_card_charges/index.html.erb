<p id="notice"><%= notice %></p>


<h1>Failed Charges</h1>
<table class='failed'>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Date</th>
      <th>Amount</th>
    </tr>
  </thead>

  <tbody>
    <% @failed.each do |charge| %>
      <tr>
        <td><%= charge.customer.full_name %></td>
        <td><%= charge.created_at %></td>
        <td><%= number_to_currency(charge.amount / 100.0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

