<% if charges.present? %>
  <ul class="<%= type %>">
    <% charges.each do |charge| %>
      <li><%= charge.decorate.customer_name %></li>
      <li><%= charge.decorate.amount %></li>
      <li><%= charge.decorate.date %></li>
    <% end %>
  </ul>
<% else %>
  <p><%= t '.no_records' %></p>
<% end %>
