<table id='<%= charge_status %>-list'>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% charges.each do |charge| %>
      <tr class='<%= charge.status %>'>
        <td><%= charge.customer_name%></td>
        <td><%= number_to_currency(charge.amount/100, :unit => "USD") %></td>
        <td><%= charge.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
