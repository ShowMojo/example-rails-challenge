<h1>Failed Charges</h1>
<table class="failed-charges">
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Amount</th>
    <th>Date</th>
  </tr>
  </thead>

  <tbody>
  <%= render partial: 'charge', collection: @charges.failed %>
  </tbody>
</table>

<h1>Disputed Charges</h1>
<table class="disputed-charges">
  <thead>
  <tr>
    <th>Customer Name</th>
    <th>Amount</th>
    <th>Date</th>
  </tr>
  </thead>

  <tbody>
  <%= render partial: 'charge', collection: @charges.disputed %>
  </tbody>
</table>

<h1>Successful Charges</h1>
<table class="success-charges">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Amount</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'charge', collection: @charges.paid %>
  </tbody>
</table>
