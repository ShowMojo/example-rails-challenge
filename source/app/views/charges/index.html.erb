<h1>Failed Charges</h1>
<table class="failed-charges">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Charge.failed.each do |charge| %>
      <tr>
        <td><%= charge.full_name %></td>
        <td><%= number_to_currency(charge.amount/100) %></td>
        <td><%= Time.at(charge.created).strftime('%F') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

