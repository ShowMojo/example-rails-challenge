<%= link_to 'New Charge', new_charge_path %>

<br>

<% if @failed_charges.size > 0 %>
<h1>Failed Charges</h1>
<table>
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>Amount</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody class="fail charges">
    <% @failed_charges.each do |charge| %>
      <tr>
        <td><%= charge.customer.first_name + " " + charge.customer.last_name %></td>
        <td><%= charge.amount %></td>
        <td><%= charge.created %></td>
        <td><%= link_to 'Show', charge %></td>
        <td><%= link_to 'Edit', edit_charge_path(charge) %></td>
        <td><%= link_to 'Destroy', charge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<% end %>

