<div class='row'>
  <div class='col-xs-12'>
    <h1><%= title %></h1>

    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Customer Name</th>
          <th>Amount</th>
          <th>Date</th>
        </tr>
      </thead>

      <tbody>
        <% charges.each do |charge| %>
          <tr class='<%= style %>'>
            <td><%= "#{charge.customer.first_name} #{charge.customer.last_name}" %></td>
            <td><%= charge.amount %></td>
            <td><%= charge.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
